<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_intecmvvm_xam.Views.RegisterPage">
    <ContentPage.Content>
        <ScrollView>
        <Grid>
            <StackLayout>
                    <Image Source="logointec.jpg"></Image>

                    <Entry x:Name="nameEntry" Placeholder="{Binding nametxt}"
                   VerticalOptions="CenterAndExpand" />

                    <Entry x:Name="emailEntry" Placeholder="{Binding emailtxt}"
                   VerticalOptions="CenterAndExpand" />

                    <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="{Binding passwordtxt}"
                   VerticalOptions="CenterAndExpand" />

                    <Entry x:Name="passwordconfirmEntry" IsPassword="True" Placeholder="{Binding password2txt}"
                   VerticalOptions="CenterAndExpand" />

                    <Button x:Name="registerButton" Text="{Binding registertxt}" Clicked="registerbuttonClicked"
                    VerticalOptions="CenterAndExpand"
                    TextColor="Red"/>
                </StackLayout>
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>