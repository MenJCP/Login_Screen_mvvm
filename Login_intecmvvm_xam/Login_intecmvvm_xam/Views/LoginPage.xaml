<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_intecmvvm_xam.Views.LoginPage">
    <ContentPage.Content>
        <Grid>
        <StackLayout>
                <Image Source="logointec.jpg" VerticalOptions="Center"></Image>

                <Entry x:Name="emailEntry" Placeholder= "{Binding emailtxt}"
                   VerticalOptions="CenterAndExpand" />

                <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="{Binding passwordtxt}"
                   VerticalOptions="CenterAndExpand" />

                <Button x:Name="loginButton" Text="{Binding logintxt}" Clicked="loginbuttonClicked"
                    BackgroundColor="Red"
                    TextColor="White"/>

                <Button x:Name="registerButton" Text="{Binding registertxt}" Clicked="registerbuttonClicked"
                    TextColor="Red"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>